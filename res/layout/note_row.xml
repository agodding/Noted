<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" android:minHeight="48dp" android:paddingLeft="5dp" android:paddingRight="5dp">

    <TextView
        android:id="@+id/noteNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Large Text"
        android:textSize="18dp" android:layout_weight="2" android:layout_marginRight="5dp" android:ellipsize="end" android:maxLines="1"/>


    <TextView
        android:id="@+id/modDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>